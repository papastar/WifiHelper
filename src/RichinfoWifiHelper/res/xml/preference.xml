<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="autoauth"
        android:widgetLayout="@layout/checkbox"
        android:summaryOff="关闭"
        android:summaryOn="开启"
        android:title="开启自动验证" >
    </CheckBoxPreference>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="shownotify"
        android:widgetLayout="@layout/checkbox"
        android:summaryOff="关闭"
        android:summaryOn="开启"
        android:title="显示通知栏" >
    </CheckBoxPreference>

    <Preference android:key="version"
        android:summary="检查更新"
        android:title="版本更新" />
    
    <Preference
        android:key="version_key"
        android:title="版本号" >
    </Preference>
    <Preference
        android:key="@+id/designer"
        android:summary="Disgner"
        android:title="ThinkMail开发组" >
    </Preference>


</PreferenceScreen>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_topbar" >

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_wifi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/logo_img"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/about_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bg_about_sel" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="26.6dp"
        android:background="#d4d1ce"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:text="@string/wifi_status"
        android:textColor="#9b9b9b"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53.3dp"
        android:gravity="center_vertical"
        android:paddingLeft="13.3dp"
        android:paddingRight="13.3dp" >

        <TextView
            android:id="@+id/wifi_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#1c1c1c"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>

        <com.richinfo.wifihelper.ui.SwitchButton
            android:id="@+id/wifi_switchbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/ic_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53.3dp"
        android:gravity="center_vertical"
        android:paddingLeft="13.3dp"
        android:paddingRight="13.3dp" >

        <TextView
            android:id="@+id/wifi_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/unauthed"
            android:textColor="#1c1c1c"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>

        <Button
            android:id="@+id/wifi_status_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_verfiy_btn_sel"
            android:text="@string/verify"
            android:textColor="#f1f1f1"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/ic_line" />

</LinearLayout>